" .vimrc
" @author Kenichi Maehashi

set fileencodings=utf-8,cp932,latin1
set nocompatible
set backspace=indent,eol,start
set viminfo='20,\"50
set history=50
set tabstop=4
set ruler
set number
set wildmenu
set showcmd
set hlsearch
nnoremap <C-L> :nohl<CR><C-L>
syntax on
set ignorecase
set smartcase
set visualbell
set autoindent
