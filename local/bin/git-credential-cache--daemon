#!/bin/sh -ue

# Workaround for Git 1.9.1 bug on Ubuntu 14.04.
# See: https://github.com/git/git/commit/f5e3c0b9d050ebdaf96d3910b01b01695e3ea1a2

if [ "${ENABLE_GIT_CREDENTIAL_HELPER:-no}" = "yes" ]; then
  echo "Starting git-credential-cache--daemon via wrapper" >&2
  exec "${GIT_EXEC_PATH_ORIG}/$(basename "${0}")" "${@}" < /dev/null 2> /dev/null &
else
  echo "Not starting Git Credential Cache Daemon (ENABLE_GIT_CREDENTIAL_HELPER=yes to enable)"
fi
