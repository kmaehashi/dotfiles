[core]
  excludesfile = ~/.gitignore
  quotepath = false
  precomposeunicode = true
[push]
  default = tracking
[user]
  name = Kenichi Maehashi
  email = webmaster@kenichimaehashi.com
[color]
  ui = auto
[commit]
  verbose = true
[alias]
  gr = log --graph --date-order --pretty=format:'<%h> %ad %Cgreen%d%Creset %s  %Cblue[%an]%Creset' --all --date=short
  a = add
  d = diff
  dc = diff --cached
  co = checkout
  com = commit
  cam = commit --amend
  cp = cherry-pick
  br = branch
  m = merge
  s = show
  st = status
  stat = status
  ru = remote update
  unst = reset HEAD
  wip = commit -m 'wip'
  fip = commit -m 'fixup! wip'
  init2 = commit -m 'initial commit' --allow-empty

  # GitHub
  pr = pull-request
  fpr = "! f() { echo \"Fetching Pull-Request #${1} from ${2:-origin}\"; git fetch ${2:-origin} pull/$1/head:pull-$1 && git checkout pull-$1; }; f"

  # quick edit
  qe = "! ${EDITOR} $(git ls-files | peco)"
  # grep edit
  ge = "! git-grep-edit"
  # graph show
  grs = "! git-graph-show"
[help]
  autocorrect = -1
[diff]
  algorithm = histogram
[credential]
  helper = cache --timeout 30000
[pull]
  ff = only
[hub]
  protocol = ssh
[include]
  path = ~/.gitconfig.local
