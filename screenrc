escape ^Z^Z
hardstatus alwayslastline "%H%=%Y/%m/%d %02c:%s"
caption always "%{=r dd}%-Lw%40L>%?%F%{=b dR}%:[%? %n%f %t %?%F%{-}%:]%?%+Lw"
defscrollback 100000

# detach on hang-up
autodetach on

# disable lockscreen
bind x
bind ^x

# use alternate screen
altscreen on

# disable utmp logging
deflogin off
