# SSH Configuration

ServerAliveInterval 15
#AddKeysToAgent yes
#UseKeychain yes
#IdentityFile ~/.ssh/id_rsa_private

Host home
    HostName _$home_
    ForwardAgent yes
    ForwardX11 yes
    ForwardX11Trusted yes
    DynamicForward 18008
    ProxyCommand proxy %h %p

Host _template_generic_
    HostName _$hostname_
    ProxyCommand proxy %h %p

Host _template_home_nested_
    HostName _$hostname_
    ProxyCommand ssh -W %h:%p home

Host 10.*
    ProxyCommand none

Host 192.*
    ProxyCommand none

Host 127.*
    ProxyCommand none

Host localhost
    ProxyCommand none

Host github.com
    ProxyCommand proxy %h %p
