# screen
if [ "${TERM}" = "screen" ]; then
  PREEXEC_HOOKS="_hook_screen_title_set"
  PRECMD_HOOKS="_hook_screen_title_clear"
fi

_hook_screen_title_clear() {
  _hook_screen_title_set "zsh"
}

_hook_screen_title_set() {
  local TITLE="${1%% *}"
  if [ ! -z "${SSH_TTY}" ]; then
    TITLE="[$(hostname -s)] ${TITLE}"
  fi
  echo -ne "\ek${TITLE}\e\\";
}
