# Git Pager
if which ifne; then
  export GIT_PAGER="ifne ${PAGER} -+F"
fi &> /dev/null

# GitHub alias
if which hub; then
  alias git=hub
  compdef hub=git
fi &> /dev/null

# Override exec path
export GIT_EXEC_PATH_ORIG="$(git --exec-path)"
export GIT_EXEC_PATH="${HOME}/local/bin:${GIT_EXEC_PATH_ORIG}"
