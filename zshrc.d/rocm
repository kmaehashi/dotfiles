# ROCm
reset_rocm_path() {
  if [ -z "${ROCM_HOME}" ]; then
    ROCM_HOME="/opt/rocm"
  else
    echo "Using ROCM_HOME from the current environment: ${ROCM_HOME}"
  fi

  if [ -d "${ROCM_HOME}" ]; then
    export PATH="${ROCM_HOME}/bin:${PATH}"
    export LD_LIBRARY_PATH="${ROCM_HOME}/lib:${LD_LIBRARY_PATH}"
    export CPATH="${ROCM_HOME}/include:${CPATH}"
    export LDFLAGS="-L${ROCM_HOME}/lib ${LDFLAGS}"
  else
    unset ROCM_HOME
  fi
}
reset_rocm_path

# ROCm (CuPy development)
cupy_rocm_dev() {
  # HCC_AMDGPU_TARGET must be set (e.g. export HCC_AMDGPU_TARGET=gfx803) depending on your GPU.
  export CUPY_INSTALL_USE_HIP=1
}
