# Proxy

# setup proxy environment
proxy_init() {
  if [ ! -z "${PROXY}" ]; then
    export ALL_PROXY="${PROXY}"
    export http_proxy="${ALL_PROXY}"
    export https_proxy="${ALL_PROXY}"
    export ftp_proxy="${ALL_PROXY}"
    export JAVA_OPTS="-DproxyHost=$(echo ${http_proxy} | cut -d: -f1) -DproxyPort=$(echo ${http_proxy} | cut -d: -f2)"

    alias telnetp="nc -X connect -x '${http_proxy}' -C -v"
    alias sshp="ssh -oProxyCommand=\"proxy %h %p\""
    alias sshnp="ssh -oProxyCommand=none"
    alias scpp="scp -oProxyCommand=\"proxy %h %p\""
    alias scpnp="scp -oProxyCommand=none"
  fi
}

# disable proxy for this session
proxy_reset() {
  unset ALL_PROXY
  unset http_proxy
  unset https_proxy
  unset ftp_proxy
  unset JAVA_OPTS

  unalias telnetp
  unalias sshp
  unalias sshnp
  unalias scpp
  unalias scpnp
}

proxy_init
