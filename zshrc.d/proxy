# Proxy

# setup proxy environment
set_proxy() {
  local PREFIX
  PREFIX=""
  if [ "${1}" = "-p" ]; then
    PREFIX="http://"
  fi

  if [ ! -z "${PROXY}" ]; then
    export ALL_PROXY="${PREFIX}${PROXY}"
    export http_proxy="${ALL_PROXY}"
    export https_proxy="${ALL_PROXY}"
    export ftp_proxy="${ALL_PROXY}"
    export JAVA_OPTS="-DproxyHost=$(echo ${PROXY} | cut -d: -f1) -DproxyPort=$(echo ${PROXY} | cut -d: -f2)"

    alias telnetp="nc -X connect -x '${PROXY}' -C -v"
    alias sshp="ssh -oProxyCommand=\"proxy %h %p\""
    alias scpp="scp -oProxyCommand=\"proxy %h %p\""
  fi
}

# disable proxy for this session
unset_proxy() {
  unset ALL_PROXY
  unset http_proxy
  unset https_proxy
  unset ftp_proxy
  unset JAVA_OPTS

  unalias telnetp
  unalias sshp
  unalias scpp
}

set_proxy

alias sshnp="ssh -oProxyCommand=none"
alias scpnp="scp -oProxyCommand=none"
